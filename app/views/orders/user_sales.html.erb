<div class="row">
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3>My Sales</h3>
			</div>
		<div class="panel-body">
			<% if @services.count == 0 %>
				<h5>You have not sold anything yet. You will though, don't worry.</h5>
			<% end %>
			<% @services.each do |service| %>
				<% service.orders.each do |order| %>
					<div class="row">
						<div class="col-md-2">
							<%= link_to service_path(order.service) do %>
								<%= image_tag order.service.image.url(:thumb) %>
							<% end %>
						</div>
						<div class="col-md-3">
							<%= link_to service_path(order.service) do %>
								<h4><%= order.service.title %></h4>
							<% end %>
						</div>
						<div class="col-md-2">
							<p><h5>Quantity: <%= order.quantity %></h5></p>
							<p><h5>Price: <%= number_to_currency(order.price) %></h5></p>
						</div>
						<div class="col-md-2">
							<p><h5>Purchaser:</h5></p>
							<p><h5><%= order.user.full_name %></h5></p>
							<p><h5><%= order.user.email %></h5></p>
						</div>
						<div class="col-md-2">
							<p><h5>Ordered on:</h5></p>
							<p><h5><%= order.created_at.strftime('%b %d, %Y') %></h5></p>
						</div>
						<div class="col-md-3">
							<h5>Total: <%= number_to_currency(order.total_price) %></h5>
						</div>
					</div>
					<hr>
				<% end %>
			<% end %>
		</div>
	</div>
</div>
	